<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".activities.SobreActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar_sobre"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:titleTextColor="#ffffff">


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/linear_sobre"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onSobre">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sobre_titulo"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16dp" />


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:background="@color/colorPrimaryText"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onTermos">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/termos"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16dp" />


    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:background="@color/colorPrimaryText"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onVersao">


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/versao"
            android:textColor="@color/colorPrimaryText"
            android:textSize="16dp" />


    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:background="@color/colorPrimaryText"></View>


</LinearLayout>
